<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8C6D7"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image_view_main"
        android:src="@drawable/circle_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/login_btn"
        android:src="@drawable/intro_btn"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_view_main"
        app:layout_constraintTop_toTopOf="@id/image_view_main"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.87"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="265dp"
        android:layout_height="476dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/circle_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_main4"
        android:layout_width="200dp"
        android:layout_height="296dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/euro"
        app:layout_constraintBottom_toBottomOf="@+id/login_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_img"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Financial Control"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="425dp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="Email:"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="474dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="Password:"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="540dp" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Sign up"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="594dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
